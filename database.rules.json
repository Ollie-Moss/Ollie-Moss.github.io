{
  "rules": {
    "comments": {
      ".read": true,
        
      "$userId": {
		"$commentId": {
          ".write": "$userId === auth.uid",

          "likedBy": {
          ".write": "data.val() === auth.uid"
          },

          "replies": {
            "$replierId": {
              ".write": "$replierId === auth.uid"
            }
          }
        }
      }  
    }
  }
}
